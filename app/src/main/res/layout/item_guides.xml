<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemguide_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayoutid"
        android:layout_width="367dp"
        android:layout_height="263dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/name_gd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_gd"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"

            android:layout_marginLeft="45dp"
            android:layout_marginTop="22dp"
            android:text="name_of guide"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_gd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_gd"
            android:layout_alignStart="@+id/name_gd"
            android:layout_alignRight="@id/name_gd"
            android:layout_marginStart="-28dp"
            android:layout_marginTop="39dp"
            android:layout_marginRight="-228dp"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp"
            android:text="@string/description"
            android:textAlignment="viewStart"
            android:textColor="@color/content_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gd_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="232dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="90dp"
            android:text="The price"
            android:textAlignment="textEnd"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/gd_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="cety"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="259dp"
            android:layout_marginRight="259dp"
            android:text="fullname"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="232dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="dt" />

        <Button
            android:id="@+id/profileGD_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageduide"

        android:layout_width="59dp"
        android:layout_height="61dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayoutid"
        app:srcCompat="@drawable/avatargratuit" />


</androidx.constraintlayout.widget.ConstraintLayout>